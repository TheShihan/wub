		<mapping resource="com/wub/db/AppraisalMain.hbm.xml" />
		<mapping resource="com/wub/db/Settings.hbm.xml" />
		<mapping resource="com/wub/db/AppraisalResults.hbm.xml" />

	</session-factory>
	


</hibernate-configuration>